<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>All Flights</title>
</head>
<body>
    <nav>
        <a href="/">Home</a>
        <a href="/flights">All Flights</a>
        <a href="/flights/new">Add Flight</a>
    </nav>
    <h1>Flight List</h1>
    <table>
        <thead>
            <tr>
                <th>Flight Number</th>
                <th>Airport</th>
                <th>Airline</th>
                <th>Departure Time</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(f => { %>
                <tr>
                    <td><%= f.flightNo %></td>
                    <td><%= f.airport %></td>
                    <td><%= f.airline %></td>
                    <td><%= f.departs %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>